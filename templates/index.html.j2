{% extends "base.html.j2" %}

{% block head %}
    <link rel="stylesheet" href="{{ url_for('static', filename='css/index.css') }}">
{% endblock %}

{% block content %}
    <main>
        {% for quiz in quizzes %}
            <section>
                <h2>{{ quiz.title }}</h2>
                <p>{{ quiz.description }}</p>
                <a href="{{ url_for('quiz', id=quiz.id) }}">Start Quiz</a>
            </section>
        {% endfor %}
    </main>
{% endblock %}